<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#606060" >

    <EditText
        android:id="@+id/editTextContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:scrollbars="horizontal|vertical"
        android:textSize="@dimen/float_editor_text_size" />

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editTextContent"
        android:text="@string/text_send"
        android:textSize="@dimen/float_editor_text_size" />

    <CheckBox
        android:id="@+id/checkBoxAsCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/buttonSend"
        android:text="@string/text_as_code"
        android:textSize="@dimen/float_editor_text_size" />

    <Button
        android:id="@+id/buttonCopy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextContent"
        android:layout_toLeftOf="@+id/buttonSend"
        android:text="@string/text_copy"
        android:textSize="@dimen/float_editor_text_size" />

</RelativeLayout>