#!/bin/bash

function cavan_visual_command()
{
	echo $*

	$* || return 1

	return 0
}

function sprd_compile_once()
{
	[ "$1" ] || return 1

	if [ -d "3rdparty" ]
	then
		./mk -o=2sim $1 n
	else
		source build/envsetup.sh
		lunch $1-eng
		kheader
		make -j16 > $1.log
	fi
}

[ -f "$1" ] ||
{
	sprd_compile_once $1
}

while read line
do
	set $line

	cavan_visual_command cd $1 || continue
	cavan_visual_command cavan-git-svn-repo init || continue
	cavan_visual_command cavan-git-svn-repo sync || continue
	cavan_visual_command cavan-git-svn-repo backup

	while :
	do
		shift
		[ "$1" ] || break
		sprd_compile_once $1
	done
done < $1
