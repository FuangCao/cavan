#!/bin/bash

FILE_HEADER="This File Is Automatically Generated By FuangCao"
AUTHOR_INFO="Author: Fuang.Cao"
EMAIL_INFO="Email: cavan.cfa@gmail.com"
DATE_INFO="Date: $(date)"
CREATE_DATE="$(date "+%Y-%m-%d %H:%M:%S")"

function generate_source_file_header()
{
cat >> $1 << EOF
/*
 * ${AUTHOR_INFO}
 * ${EMAIL_INFO}
 * ${DATE_INFO}
 */

#include <cavan.h>
EOF
}

function create_source_file()
{
	local HEADER_FILE_PATH

	generate_source_file_header $2.c

	case "$1" in
		app)
			FILE_TYPE="app"
			MAKE_TYPE="APP"
			if [ "$3" = "simple" ]
			then
				cat >> $2.c << EOF

int main(int argc, char *argv[])
{

	return 0;
}
EOF
			else
				cat >> $2.c << EOF

#define FILE_CREATE_DATE "${CREATE_DATE}"

EOF
				cat ${CAVAN_HOME_ABS}/script/core/example.c >> $2.c
			fi
			;;
		lib)
			FILE_TYPE="lib"
			MAKE_TYPE="LIB"

			if [ "$3" ]
			then
				HEADER_FILE_PATH="$3/$2.h"
			else
				HEADER_FILE_PATH="${CAVAN_HOME_ABS}/include/cavan/$2.h"
			fi
			cat > ${HEADER_FILE_PATH} << EOF
#pragma once

EOF
			generate_source_file_header ${HEADER_FILE_PATH}
			cat >> $2.c << EOF
#include <cavan/$2.h>
EOF
			;;
		*)
			echo "unknown source type"
			return 1
			;;
	esac
}

function create_makefile()
{
	[ "$2" ] ||
	{
		echo "please input pathname"
		return 1
	}

	[ -e "$2" ] &&
	{
		echo "directory $2 is exist"
		return 1
	}

	echo ${PWD} | grep ${CAVAN_HOME_ABS} &&
	{
		create_source_file $* || return 1
		return 0
	}

	rm $2 -rfv

	mkdir $2 && cd $2 ||
	{
		echo "can't change directory to $2"
		return 1
	}

	create_source_file $* .


cat > cavan.mk << EOF
# ${FILE_HEADER}
# ${AUTHOR_INFO}

source-${FILE_TYPE} += $2.c
EOF

cat > Makefile << EOF
CAVAN_HOME = ${CAVAN_HOME_ABS}

all:
	@+make -C \$(CAVAN_HOME) ${MAKE_TYPE}=\$(PWD)

%:
	@+make -C \$(CAVAN_HOME) ${MAKE_TYPE}=\$(PWD) \$@
EOF
}

function get_file_abs_dir()
{
	cd `dirname $0` && pwd
}

CMD_ABS_DIR=`get_file_abs_dir $0`
CMD_ABS_PATH=${CMD_ABS_DIR}/`basename $0`

CAVAN_HOME_ABS=`dirname ${CMD_ABS_DIR}`

echo "============================================================"
echo "CMD_ABS_PATH = ${CMD_ABS_PATH}"
echo "CAVAN_HOME_ABS = ${CAVAN_HOME_ABS}"
echo "============================================================"

create_makefile $*
