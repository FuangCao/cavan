CAVAN_BUILD_ARCH = $(shell uname -m)
CAVAN_BUILD_PLAT = $(shell gcc -dumpmachine)
CAVAN_TARGET_ARCH = arm
CAVAN_TARGET_PLAT = $(CAVAN_TARGET_ARCH)-cavan-linux-gnueabi

PACKAGE_VERSION_STRING = Fuang.Cao <cavan.cfa@gmail.com>

ifeq ($(CAVAN_TARGET_ARCH),arm)
  CPU_BINUTILS_OPTION =
  # --with-float=soft
  CPU_GCC_OPTION = --with-arch=armv7-a --with-tune=cortex-a8
  # --with-float=soft
endif

Q = @

BINUTILS_VERSION = 2.24
GCC_VERSION = 4.8.2
GLIBC_VERSION = 2.16.0
KERNEL_VERSION = 3.12.2
LOWEST_KERNEL_VERSION = 2.6.15

GMP_VERSION = 5.1.3
MPFR_VERSION = 3.1.2
MPC_VERSION = 1.0.1

DOWNLOAD_TYPES = tar.xz tar.bz2 tar.gz
PACKAGE_TYPES = $(DOWNLOAD_TYPES) tar zip rar
HOST_APPS = xz-utils m4 gawk gettext gcc g++
FORCE_DECOMPRESSION = no

DOWNLOAD_WAY = wget
SERVER_IP = 192.168.0.144
SERVER_PORT = 8888
SERVER_SOURCE = /work/source

APT_GET = sudo apt-get install -y

export CAVAN_TARGET_ARCH CAVAN_TARGET_PLAT CAVAN_BUILD_ARCH CAVAN_BUILD_PLAT
export PACKAGE_VERSION_STRING
export CPU_BINUTILS_OPTION CPU_GCC_OPTION Q
export BINUTILS_VERSION GCC_VERSION GLIBC_VERSION KERNEL_VERSION KERNEL_VERSION LOWEST_KERNEL_VERSION
export GMP_VERSION MPFR_VERSION MPC_VERSION
export DOWNLOAD_TYPES FORCE_DECOMPRESSION PACKAGE_TYPES
export DOWNLOAD_WAY SERVER_IP SERVER_PORT SERVER_SOURCE
export APT_GET

include build/core/main.mk
