#!/bin/bash

mount -t proc none /proc
mount -t sysfs none /sys
mount -t tmpfs none /dev
mount -t tmpfs none /tmp -o size=512m

mknod /dev/null c 1 3

while read line
do
	[ "${line}" ] && set ${line} && mknod /dev/$4 b $1 $2
done < /proc/partitions

udevd --daemon
udevadm trigger

export PS1='\[\033[01;32m\]cavan@CFA8888\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]# '
export PATH="/bin:/sbin:/usr/bin:/usr/sbin:/usr/local/bin:/usr/local/sbin:/usr/gnu/bin:/usr/gnu/sbin:."

alias ls='ls --color'
alias la='ls -A'
alias ll='ls -alF'
alias grep='grep --color'
